# Gonzales Configuration
# All variables prefixed with GONZALES_
# Copy this file to .env and adjust values as needed.

# Server
GONZALES_HOST=127.0.0.1
GONZALES_PORT=8470
GONZALES_DEBUG=false
GONZALES_LOG_LEVEL=INFO

# Speed test
GONZALES_TEST_INTERVAL_MINUTES=60
GONZALES_MANUAL_TRIGGER_COOLDOWN_SECONDS=60
GONZALES_SPEEDTEST_BINARY=speedtest
GONZALES_PREFERRED_SERVER_ID=0

# Thresholds (for SLA/reliability tracking)
GONZALES_DOWNLOAD_THRESHOLD_MBPS=1000.0
GONZALES_UPLOAD_THRESHOLD_MBPS=500.0

# Database
GONZALES_DB_PATH=gonzales.db

# CORS (comma-separated origins)
GONZALES_CORS_ORIGINS=["http://localhost:5173","http://localhost:8470"]

# Security
# IMPORTANT: Set this when exposing Gonzales on the network (host != 127.0.0.1).
# Without an API key, anyone on your network can trigger tests, change config,
# and delete measurements. Leave empty ONLY for localhost-only deployments.
GONZALES_API_KEY=

# UI
GONZALES_THEME=auto
